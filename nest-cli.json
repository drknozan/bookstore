{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/book/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/book/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/book",
  "projects": {
    "user": {
      "type": "application",
      "root": "apps/user",
      "entryFile": "main",
      "sourceRoot": "apps/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/user/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "book": {
      "type": "application",
      "root": "apps/book",
      "entryFile": "main",
      "sourceRoot": "apps/book/src",
      "compilerOptions": {
        "tsConfigPath": "apps/book/tsconfig.app.json"
      }
    },
    "search": {
      "type": "application",
      "root": "apps/search",
      "entryFile": "main",
      "sourceRoot": "apps/search/src",
      "compilerOptions": {
        "tsConfigPath": "apps/search/tsconfig.app.json"
      }
    },
    "offer": {
      "type": "application",
      "root": "apps/offer",
      "entryFile": "main",
      "sourceRoot": "apps/offer/src",
      "compilerOptions": {
        "tsConfigPath": "apps/offer/tsconfig.app.json"
      }
    }
  }
}
